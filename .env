# Brightbot Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///./trading.db
DATABASE_TYPE=sqlite

# Deriv API Configuration
DERIV_API_TOKEN=your_deriv_api_token_here
DERIV_APP_ID=1089
DERIV_WS_URL=wss://ws.binaryws.com/websockets/v3

# Trading Configuration
TRADING_MODE=demo
DEFAULT_STAKE=1.0
MAX_STAKE=10.0
MIN_TRADE_INTERVAL=30
MAX_CONCURRENT_TRADES=3

# AI Configuration
AI_MODEL_PATH=./backend/ai_models
AI_TRAINING_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.7

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8001
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=3000

# Integration Configuration
TRADINGVIEW_WEBHOOK_SECRET=your_webhook_secret
MT5_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/brightbot.log

# Risk Management
MAX_DRAWDOWN_PERCENT=20
STOP_LOSS_PERCENT=5
TRAILING_STOP_LOSS_PERCENT=2
TAKE_PROFIT_PERCENT=10

# Notification Settings
EMAIL_NOTIFICATIONS=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Development Settings
DEBUG=true
RELOAD=true